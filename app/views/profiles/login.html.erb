<h1>Sign In</h1>
<% if @errors.present? %>
  <div id="errorExplanation" class="errorExplanation">
    <h2>Sign In Failed</h2>
    <ul>
      <% @errors.each do |error| %>
        <li><%= h(error) %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% form_tag({}.merge(url_params)) do %>
  <table>
    <tr>
      <td colspan="2">
        If you don't have an account yet, 
        <%= link_to('request an invitation', {:protocol => SECURE_PROTO, :only_path => false, :controller => 'profile', :action => 'request an invitation'}.merge(url_params)) %>.
      </td>
    </tr>
    <tr>
      <td>User name:</td>
      <td><%= text_field_tag('username', params[:username]) %></td>
    </tr>
    <tr>
      <td>Password:</td>
      <td><%= password_field_tag('password', params[:password]) %>
    </tr>

    <tr>
      <td></td>
      <td><%= submit_tag("Sign In", :disable_with => "Changing password...") %></td>
    </tr>
  </table>
<% end %>
