<div id="content">
<div style="float:left;display:inline;">
<h1>Services</h1>
</div>
<div style="float:right;display:inline;padding-right:40px;">
    <ul class="service_filter">

      <li><span style="position:relative;top:10px;padding:4px;background:#efefef;color:#666666;margin:6px;border:1px solid #cccccc;" class="rounded">sort by</li>
      <li class="first"><a href="/services/?sort=a-z&category=<%= params['category'] %>"<% if params[:sort] == "a-z" || !params[:sort] %> class="active"<% end %>>A-Z</a></li>
      <li><a href="/services/?sort=location&category=<%= params['category'] %>"<% if params[:sort] == "location" %> class="active"<% end %>>Location</a></li>
      <li class="last"><a href="/services/?sort=category&category=<%= params['category'] %>"<% if params[:sort] == "category" %> class="active"<% end %>>Category</a></li>
<% if logged_in? %>
<li><a class="small_button rounded" style="margin-left:24px;" href="/services_intro">Add your Service &rarr;</a></li>
<% end %>
    </ul>

</div>
<div style="clear:both;"></div>
 <div class="column col_25" style="height:800px;">
   <div id="category_box" class="avatar_box_side" style="width:158px;padding:0px;">
    <div class="avatar_box_side_title">
      <h2>Categories</h2>
      </div>
       <ul class="service_categories">
       
       <li>
      <a href="/services/?category=All" style="border-top:0px;"<% if params[:category] == "All" || !params[:category] || params[:category] == ""%> class="active"<% end %>>All</a>
      </li>
