  <% @categories.each do |category| -%>
  
<li>
  <a href="/services/?sort=<%= params['sort'] %>&category=<%= category.content %>&page=1"<% if params[:category] == category.content %> class="active"<% end %>><%= category.content %></a>
</li>
  <% end -%>
  -->
  </ul>
<div style="clear:both;"></div>
</div>
</div>
<div class="column_75">
  
  <% @services.each do |service| -%>
  <%= render :partial => 'thumb', :locals => {:service => service} %>
  <% end -%>
  
    <div class="service_container" style="border: 1px solid;border-color: #cccccc;">
  <a href="/services_intro" class="img_link"><img alt="Add a Service" class="border" src="/images/avatar_originalprojects.png" /></a>	<div class="project_info">
	  <h2>
      <a href="/services_intro">Add a service</a>      
    </h2>
    <p>Contact Original Projects about this unique and selective opportunity to become an Original Service Provider.</p>    
	</div>
</div>


<p><%= will_paginate @services %></p>
  <br class="clear" />

  <p>
    <a href="#top"><span class="arrow">&#8593;</span> Top of page</a>
  </p>
</div>
</div>
